<div class="login_box container-fluid col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
  <div class="login_form_container col-lg-7 col-md-7 col-sm-8 col-xs-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "email-signin") do |f| %>  
      <div class="u-form-group login_id">
        <%= f.text_field :login ,placeholder:"Username / Email" %>
      </div>

      <div class="u-form-group">
        <%= f.password_field :password, autocomplete: "off" ,placeholder:"Password" %>
      </div>
      <div class="u-form-group">
        <%= f.submit "Login" ,class: " btn text-capitalize" %>
      </div>
      <%= link_to "Forgot password?" , new_password_path(resource_name) %>
    <%end%>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-4 col-xs-12">
    <%= image_tag("logo.png",class: "login_box_logo")%>
    <div class="sign_in_notice">
      <strong class="">Don't have an account?</strong><br /> 
      <%= link_to "Sign up" ,new_registration_path(resource_name),class: "btn btn-link text-capitalize signup_link"%>
      <br />
    </div>
  </div>    
</div>