<div class="modal-content login_modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title hidden">Login</h4>
  </div>
<div class="modal-body login_box">
    <div class="login_form_container col-lg-7 col-md-7 col-sm-7 col-xs-12">
    <div class="error_message_login text-danger text-center"></div>
    <div class="successfully_registered text-success text-center"></div>
      <%= form_for(@user, as: @user, url: session_path(@user), remote: true, html:{class: "email-signin"}) do |f| %>  
      <div class="l-form-group login_id">
        <%= f.text_field :login ,placeholder:"Username / Email" %>
      </div>

      <div class="l-form-group">
        <%= f.password_field :password, autocomplete: "off" ,placeholder:"Password" %>
      </div>
      <div class="l-form-group">
        <%= f.submit "Login" ,class: "btn login_button text-capitalize" %>
      </div>
      <div class="text-center">
        <%= link_to "Forgot password?" , forgot_password_users_path,:remote => true ,id: "forgot_password"%>  
      </div>
      <%end%>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
      <%= image_tag("logo.png",class: "login_box_logo")%>
      <div class="sign_in_notice">
        <strong class="">Don't have an account?</strong><br /> 
        <%= link_to "Sign up" ,new_registration_path(@user),class: "btn btn-link text-capitalize signup_link sign_up"%>
        <br />
      </div>
    </div>
  </div>
  <div class="modal-footer">
  </div>
</div>