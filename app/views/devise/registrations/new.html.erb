<div class="registration_box container-fluid col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12"> 
  <div class="col-lg-5 col-md-5 col-sm-4 col-xs-12"> 
    <%=image_tag("logo.png")%>
    <img class="registration_box_logo" src="assets/images/logo.png">
    <div class="sign_up_notice">
      <strong class="text-capitalize">Sign up</strong> to browse or search thousands of recipes, cooking tips, how-to food videos and a lot more. <br /> <br />
      At MiChef youâ€™re sure to find something delicious for every occassion.
    </div>
  </div>
  <div class="registration_form_container col-lg-7 col-md-7 col-sm-8 col-xs-12">
    <%= form_for(resource, as: resource_name,class: "email-signup", url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="u-form-group user_full_name">
        <%= f.text_field :first_name ,:placeholder =>"First Name" %>
        <%= f.text_field :last_name ,:placeholder =>"Last Name" %>
      </div>
      <div class="u-form-group user_name">
        <%= f.text_field :user_name ,:placeholder =>"Username"%>
        <div class="styled-select">
          <%= f.select :gender ,[['Male','male'],['Female','female']],class: "user_gender"%>              
        </div>
      </div> 
      <div class="u-form-group">
        <%= f.email_field :email, autofocus: true,:placeholder =>"Email" %>
      </div> 

      <div class="u-form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",:placeholder =>"Password" %>
      </div>
      <div class="u-form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off" ,
        :placeholder =>"Retype password"%>
      </div> 
      <div class="u-form-group">
        <%#= f.submit "Create an account",class: "text-capitalize" %>
        <button class="text-capitalize">Create an account</button>
      </div>
      <span>By signing up, I agree to MiChef's <a href="">Terms and Conditions</a></span>
    <%end%>
  </div>
  <%= render "devise/shared/links" %>
</div>
